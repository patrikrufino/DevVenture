<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/visor"
        style="@style/visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_5_5_2_6_42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_division"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_div"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_seven"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_7"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_four"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_4"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/one"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_1"
                app:cornerRadius="@dimen/corner_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_multiplication"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_mut"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_eight"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_8"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_five"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_5"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/two"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_2"
                app:cornerRadius="@dimen/corner_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_subtraction"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_sub"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_nine"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_9"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_six"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_6"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_three"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_3"
                app:cornerRadius="@dimen/corner_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_sum"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_sum"
                app:cornerRadius="@dimen/corner_button" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/signal_equal"
                app:cornerRadius="@dimen/corner_button" />


            <Button
                android:id="@+id/btn_equal"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/signal_0"
                app:cornerRadius="@dimen/corner_button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>